<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.khaled.staytuned.HomePage">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ></android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="30dp"
        android:paddingBottom="3dp">
        <ImageView
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_left_drop_circle_outline_black_24dp"
            android:layout_toLeftOf="@id/pages"
            android:id="@+id/previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            tools:text="10/1400"
            android:id="@+id/pages"
            android:minWidth="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_right_drop_circle_outline_black_24dp"
            android:layout_toRightOf="@id/pages"
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>
